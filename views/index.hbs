<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/mainStyle.css">
    <link rel="stylesheet" href="/css/tasksStyle.css">
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <title></title>
</head>

<body>
    <header class="header">
        <div class="header__container">
            <div class="header__logo"></div>

            <div class="header__nav nav">
                <div class="nav__item nav__item_active"><a href="/" class="nav__text">Задачи</a></div>
                <div class="nav__item"><a href="/contacts" class="nav__text">Контакты</a></div>
                <div class="nav__item"><a href="/meeting" class="nav__text">Встречи</a></div>
            </div>
        </div>
    </header>

    <section class="main-list">
        <div class="main-list__container">
            {{#each task}}
                <div class="main-list__item item">
                    <div class="item__left-part">
                        <div class="item__title">{{this.title}}</div>
                        <div class="item__contact">{{this.contact}}</div>
                    </div>
                    <div class="item__right-part">
                        <div class="item__status">{{this.status}}</div>
                        <div class="item__date">{{this.date}}</div>
                        <div class="item__priority">{{this.priority}}</div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
</body>

<script>
    const tg = window.Telegram.WebApp;
    console.debug(tg.initData);
</script>
</html>